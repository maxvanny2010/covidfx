<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane fx:id="rootPane" stylesheets="@../style/main_style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.covid.gui.widget.WidgetController">
    <VBox alignment="CENTER" stylesheets="@../style/main_style.css" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <Label styleClass="main-title" text="com.covid-2020 information" />
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <FontIcon iconColor="WHITE" iconLiteral="fa-globe" iconSize="30" />
            <Text fx:id="textGlobalReport" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="content-text" text="Cases: ... |  Recovered: ... |  Deaths: ..." />
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="28.0" spacing="20.0">
            <Text fx:id="textCountryCode" fill="#b0d9ff" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="country-title" text="UA" />
            <Text fx:id="textCountryReport" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="content-text" text="Cases: ... |  Recovered: ... |  Deaths: ..." />
        </HBox>
    </VBox>
</AnchorPane>
